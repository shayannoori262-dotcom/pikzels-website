<script> // اضافه کردن قابلیت کلیک به گزینه‌های ثبت‌نام document.querySelectorAll('.signup-option').forEach(option => {
 option.addEventListener('click', function() {
 // اول همه گزینه‌ها را غیرفعال کنیم
 document.querySelectorAll('.signup-option').forEach(opt => {
 opt.classList.remove('checked');
 if (opt.querySelector('input[type="checkbox"]')) {
 opt.querySelector('input[type="checkbox"]').checked = false;
 }
 });
 
 // سپس گزینه کلیک شده را فعال کنیم
 this.classList.add('checked');
 if (this.querySelector('input[type="checkbox"]')) {
 this.querySelector('input[type="checkbox"]').checked = true;
 }
 
 // نمایش پیام موفقیت
 alert('ثبت‌نام موفقیت‌آمیز بود! در حال انتقال...');
 
 // انتقال به صفحه اصلی بعد از 2 ثانیه
 setTimeout(function() {
 window.location.href = 'dashboard.html';
 }, 2000);
 });
 });

 // همچنین برای inputها هم event listener اضافه می‌کنیم
 document.querySelectorAll('.checkbox').forEach(checkbox => {
 checkbox.addEventListener('click', function(e) {
 e.stopPropagation(); // جلوگیری از اجرای event parent
 const parentOption = this.closest('.signup-option');
 
 // اول همه گزینه‌ها را غیرفعال کنیم
 document.querySelectorAll('.signup-option').forEach(opt => {
 opt.classList.remove('checked');
 if (opt.querySelector('input[type="checkbox"]')) {
 opt.querySelector('input[type="checkbox"]').checked = false;
 }
 });
 
 // سپس گزینه کلیک شده را فعال کنیم
 parentOption.classList.add('checked');
 this.checked = true;
 
 // نمایش پیام موفقیت
 alert('ثبت‌نام موفقیت‌آمیز بود! در حال انتقال...');
 
 // انتقال به صفحه اصلی بعد از 2 ثانیه
 setTimeout(function() {
 window.location.href = 'dashboard.html';
 }, 2000);
 });
 });
</script>
